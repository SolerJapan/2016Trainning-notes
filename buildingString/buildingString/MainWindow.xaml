<Window x:Class="buildingString.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:buildingString"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Content="Enter a Value:" HorizontalAlignment="Left"
              Margin="10,10,0,0" VerticalAlignment="Top" FontSize="18" />
        <TextBox x:Name="txtInput" Margin="128,14,18,0" TextWrapping="Wrap"
                 FontSize="18" Height="26" VerticalAlignment="Top"/>

        <TextBox x:Name="txtOutput" Margin="128,50,18,55"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True"
                 FontSize="18" />
        
        <Button x:Name="btnGo" Content="Go"
                HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Margin="128,0,0,20"
                Click="RunCode" FontSize="18" Width="80" />

        <Button x:Name="clear" Content="Clear"
                HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Margin="225,0,0,20"
                Click="ClearOut" FontSize="18" Width="80" />
    </Grid>
</Window>
